<div class="new-trip-container">
  <h1 id="new-trip-title">Insert Your Basic Information</h1>

  <form class="new-trip-form" action="/new-user" method="POST">
    <div class="group">      
      <input name="fName" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>First Name</label>
    </div>
      
    <div class="group">      
      <input name="lName" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Last Name</label>
    </div>

    <div class="group">      
      <input name="level" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Surfing Level</label>
    </div>

    <div class="group">      
      <input name="age" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Age</label>
    </div>

    <div class="group">      
      <input name="hometown" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Hometown</label>
    </div>
    <button type="submit">Create</button>
  </form>
</div>