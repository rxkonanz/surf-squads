<div class="container trip-container">
  <h2 class="trip-title">{{surfTrip.title}}</h2>
  <img src="{{surfTrip.picture}}" class="trip-page-image">
  <p class="trip-location">{{surfTrip.location}}</p>

  <div class="trip-page-info">
    <h3>Hello {{user.username}}</h3>
    <h6>Description</h6>
    <p>{{surfTrip.description}}</p>
    <ul>
      {{#each surfTrip.members}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <button>Join Squad</button>
  </div>

</div>