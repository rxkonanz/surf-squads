<div class="new-trip-container">
  <h1 id="new-trip-title">Create a New Trip</h1>

  <form class="new-trip-form" action="/new-trip" method="POST" enctype="multipart/form-data">
    <div class="group">      
      <input name="tripName" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Trip Name</label>
    </div>
      
    <div class="group">      
      <input name="location" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Location</label>
    </div>

    <div class="group">      
      <input name="description" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Description</label>
    </div>

    <div class="group">      
      <input name="difficulty" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Difficulty</label>
    </div>

    <div class="group">      
      <input name="airbnbLink" type="text" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>AirBnb Link</label>
    </div>

    <div class="group">      
      <input name="photo" type="file" class="fancy-input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
    </div>
    <button type="submit">Create</button>
  </form>
</div>